<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bonjour</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>

<body>
  <%- include('partials/navbar') %>
  <%- include('partials/popin')  %>
    
    <div class="container">
      <% if (!tickets || (tickets.length === 0)) { %>
        <h2 class="mt-5 mb-3 text-white">Vous n'avez pas de tickets... Pensez Ã  en ajouter ðŸ¤“</h2>
      <% } else { %>
      <div class="row">
        <div class="col-12 d-flex flex-column">
          <h1 class="mt-5 mb-3 text-white">My tickets :</h1>

          <table class="table bg-white rounded">
            <thead>
              <tr class="m-5">
                <th class="p-3" scope="col">NÂ°</th>
                <th class="p-3" scope="col">Journey</th>
                <th class="p-3" scope="col">Date</th>
                <th class="p-3" scope="col">Departure time</th>
                <th class="p-3" scope="col">Price</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% for( let i=0; i < tickets.length; i++ ) { %>
              <tr>
                <td class="p-3"><%= i + 1 %></td>
                <td class="p-3"><%= tickets[i].departure %>/<%= tickets[i].arrival %></td>
                <td class="p-3"><%= dateFormat(new Date(tickets[i].date)) %> </td>
                <td class="p-3"><%= tickets[i].departureTime %></td>
                <td class="p-3"><%= tickets[i].price %>â‚¬</td>
                <td class="p-3"><a href="/delete-ticket?index=<%= i %>"><i class="fas fa-trash-alt"></i></a></td>
              </tr>
              <% } %>
              <tr class="table-danger">
                <td class="p-3">Total</td>
                <td colspan="3"></td>
                <td class="p-3"><%= tickets.map(ticket => ticket.price).reduce((a, b) => a + b, 0) %>â‚¬</td>
                <td></td>
              </tr>
            </tbody>
          </table>

          <!-- Button trigger modal -->
          <div class="align-self-end">
            <a href="/home" type="button" class="btn btn-danger">Home</a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              Confirm
            </button>
          </div>

    </div>
    <% } %>
  </div>
  </div>
  <%- include('partials/footer') %>

</body>

</html>