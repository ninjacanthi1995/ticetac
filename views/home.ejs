<body>
  <%- include('partials/navbar') %>
  <div class="container">
    <form action="/search" method="post" class="row mt-3">
      <div class="col-12 col-md-3 mt-3">
        <input type="text" class="form-control" value="Rennes" name="fromCity" placeholder="From: Paris, Marseille...">
      </div>
      <div class="col-12 col-md-3 mt-3">
        <input type="text" class="form-control" value="Lille" name="toCity" placeholder="To: Lille, Nantes...">
      </div>
      <div class="col-12 col-md-3 mt-3">
        <input type="date" class="form-control" name="date" value="2018-11-24" min="2018-01-01" max="2021-12-31">
      </div>
      <button type="submit" class="btn btn-danger col-12 col-md-3 mt-3">Go</button>
    </form>

    <% if (journeys) { %>
    <% for( let i = 0; i < journeys.length; i++ ) { %>
      <div class="card">
        <div class="card-body">
          <p>Paris / Lille</p>
          <span>train departure at: 13:00</span>
